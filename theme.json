{
	"version": 2,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"slug": "white",
					"color": "#fff",
					"name": "White"
				},
				{
					"slug": "black",
					"color": "#000",
					"name": "Black"
				},
				{
					"slug": "primary",
					"color": "#009b3a",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#343a40",
					"name": "Secondary"
				},
				{
					"slug": "tertiary",
					"color": "#21252980",
					"name": "Tertiary"
				},
				{
					"slug": "transparent",
					"color": "transparent",
					"name": "Transparent"
				}
			],
			"gradients": [
				{
					"slug": "primary-white",
					"gradient": "linear-gradient(#0073aa 49.9%,#fff 50%)",
					"name": "Primary color to white"
				},
				{
					"slug": "white-primary",
					"gradient": "linear-gradient(#fff 49.9%,#0073aa 50%)",
					"name": "Horizontal white to Primary color"
				}
			],
			"duotone": [
				{
					"colors": ["#00a0d2", "#0073aa"],
					"slug": "secondary-primary",
					"name": "Secondary and primary"
				},
				{
					"colors": ["#0073aa", "#f0f0f0"],
					"slug": "primary-contrast",
					"name": "Primary and Contrast"
				}
			]
		},
		"layout": {
			"contentSize": "1320px",
			"wideSize": "1320px"
		},
		"spacing": {
			"margin": true,
			"padding": true,
			"spacingSizes": [
				{
					"slug": "0",
					"size": "0",
					"name": "0"
				},
				{
					"slug": "1",
					"size": "0.25rem",
					"name": "1"
				},
				{
					"slug": "2",
					"size": "0.5rem",
					"name": "2"
				},
				{
					"slug": "3",
					"size": "1rem",
					"name": "3"
				},
				{
					"slug": "4",
					"size": "1.5rem",
					"name": "4"
				},
				{
					"slug": "5",
					"size": "3rem",
					"name": "5"
				}
			],
			"units": ["px", "em", "rem", "vh", "vw", "%"]
		},
		"typography": {
			"dropCap": false,
			"fluid": true,
			"fontFamilies": [
				{
					"name": "System",
					"slug": "system",
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif"
				},
				{
					"name": "Roboto",
					"slug": "roboto",
					"fontFamily": "Roboto, sans-serif"
				},
				{
					"name": "Serif",
					"slug": "serif",
					"fontFamily": "\"Times New Roman\",\"New York\",Times,\"Noto Serif\",serif"
				},
				{
					"name": "Monospace",
					"slug": "monospace",
					"fontFamily": "Consolas,Menlo,Monaco,\"SF Mono\",\"DejaVu Sans Mono\",\"Roboto Mono\",\"Courier New\",Courier,monospace"
				}
			],
			"fontSizes": [
				{
					"slug": "small",
					"size": "0.875rem",
					"name": "Small",
					"fluid": false
				},
				{
					"slug": "medium",
					"size": "1rem",
					"name": "Medium",
					"fluid": false
				},
				{
					"slug": "large",
					"size": "1.25rem",
					"name": "Large",
					"fluid": false
				}
			]
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"blocks": {
			"core/code": {
				"color": {
					"text": "var(--wp--preset--color--black)"
				}
			},
			"core/comment-author-name": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-edit-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/post-comments-form": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-reply-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/navigation": {
				"css": "& .wp-block-site-title{ margin:0; font-weight:400;}",
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--black)"
						},
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--black)"
							},
							"typography": {
								"textDecoration": "none"
							}
						},
						":focus": {
							"color": {
								"text": "var(--wp--preset--color--black)"
							}
						},
						":active": {
							"color": {
								"text": "var(--wp--preset--color--black)"
							}
						}
					}
				}
			},
			"core/post-author-name": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"textTransform": "capitalize"
				}
			},
			"core/post-content": {
				"spacing": {
					"margin": {
						"top": "var(--wp--preset--spacing--60)",
						"bottom": "var(--wp--preset--spacing--60)"
					}
				}
			},
			"core/post-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/post-excerpt": {
				"elements": {
					"link": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--small)"
						}
					}
				}
			},
			"core/post-featured-image": {
				"spacing": {
					"margin": {
						"bottom": "var(--wp--preset--spacing--40)"
					}
				}
			},
			"core/post-template": {
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--50)",
						"bottom": "var(--wp--preset--spacing--50)"
					}
				}
			},
			"core/post-terms": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/post-title": {
				"typography": {
					"fontSize": "calc(var(--wp--preset--font-size--regular, 1rem) * 4)"
				}
			},
			"core/query-pagination": {
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--50)"
					}
				}
			},
			"core/search": {
				"css": ".wp-block-search__button-inside .wp-block-search__inside-wrapper{border: none;}",
				"typography": {
					"lineHeight": "1"
				}
			},
			"core/site-title": {
				"css": ".wp-block-search__button-inside .wp-block-search__inside-wrapper{border: none;}",
				"elements": {
					"link": { "typography": { "textDecoration": "none" } }
				}
			}
		},
		"color": {
			"background": "var(--wp--preset--color--white)",
			"text": "var(--wp--preset--color--black)"
		},
		"elements": {
			"button": {
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--30)",
						"right": "var(--wp--preset--spacing--30)",
						"bottom": "var(--wp--preset--spacing--30)",
						"left": "var(--wp--preset--spacing--30)"
					}
				},
				"border": {
					"color": "var(--wp--preset--color--transparent)",
					"width": "4px",
					"style": "solid",
					"radius": "4px"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--black)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontWeight": "700"
				},
				"shadow": "var(--wp--preset--shadow--natural)",
				":hover": {
					"border": {
						"color": "var(--wp--preset--color--secondary)"
					}
				}
			},
			"caption": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			},
			"cite": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--black)"
				},
				"typography": {
					"textDecoration": "none"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--black)"
					},
					"typography": {
						"textDecoration": "none"
					}
				},
				":focus": {
					"color": {
						"text": "var(--wp--preset--color--black)"
					}
				},
				":active": {
					"color": {
						"text": "var(--wp--preset--color--black)"
					}
				}
			},
			"heading": {
				"typography": {
					"lineHeight": "1.2"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "calc(var(--wp--preset--font-size--regular, 1rem) * 2.5)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "calc(var(--wp--preset--font-size--regular, 1rem) * 2)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "calc(var(--wp--preset--font-size--regular, 1rem) * 1.75)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "calc(var(--wp--preset--font-size--regular, 1rem) * 1.5)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "calc(var(--wp--preset--font-size--regular, 1rem) * 1.25)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "calc(var(--wp--preset--font-size--regular, 1rem) * 1)"
				}
			}
		},
		"spacing": {
			"blockGap": "1rem",
			"padding": {
				"right": "1rem",
				"left": "1rem"
			}
		},
		"typography": {
			"fontSize": "var(--wp--preset--font-size--medium)",
			"fontFamily": "var(--wp--preset--font-family--roboto)",
			"lineHeight": "1.5"
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		},
		{
			"name": "one-column-layout",
			"title": "One Column Layout",
			"area": "uncategorized"
		},
		{
			"name": "two-column-layout",
			"title": "Two Column Layout",
			"area": "uncategorized"
		}
	],
	"customTemplates": [
		{
			"name": "no-title",
			"title": "No title",
			"postTypes": ["post", "page"]
		},
		{
			"name": "single-two-column",
			"title": "Single - Two Column",
			"postTypes": ["post", "page"]
		}
	]
}

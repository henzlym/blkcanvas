{#
	{% render "@component-dropdown" with {
		items: ['Action', 'Another action', 'Something else here'],
		title: 'Dropdown button'
	} %}
 #}
<li class="nav-item dropdown {{ classes }}">
	<a class="dropdown-item dropdown-toggle {{ link_classes }}" href="{{ url ?: '#' }}" role="button" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
		{% if icon %}
			{% render "@components-icon" with {
				icon:icon
			} %}
		{% endif %}
		{{ title }}
	</a>
	{% if items %}
		<ul class="dropdown-menu">
			{% for item in items %}
				{% if item.children is defined or item.children %}
					{% render "@component-dropdown" with {
						items: item.children,
						title: item.label ?: item,
						classes:'dropend'
					} %}
				{% else %}
					<li class="{% if item.children is defined %}has-children dropend{% endif %}">
						<a class="dropdown-item{% if item.children is defined %} dropdown-toggle{% endif %}" href="{{ item.url ?: '#' }}" {% if item.children is defined %} role="button" data-bs-toggle="dropdown" {% endif %}>{{ item.label ?: item }}</a>

					</li>
				{% endif %}
			{% endfor %}
		</ul>
	{% endif %}
</li>

<a href="{{ url ?: '#' }}" class="link_item{% if classes %} {{ classes }}{% endif %}" {% if aria_label %} aria-label="{{ aria_label }}" {% endif %} {% if rel %} rel="{{ rel }}" {% endif %}>
	{% if title %}
		{{ title }}
	{% endif %}
	{% if icon %}
		{% render "@partials-icon" with {
			icon:icon,
			height:icon_height,
			width:icon_width
		} %}
	{% endif %}
</a>
